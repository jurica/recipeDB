@page "/recipe"
@inject HttpClient Http

@if (recipes == null)
{
    <p><em>Lade ...</em></p>
}
else
{
    <h1>Rezepte</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">erstellt am</th>
                <th scope="col">geändert am</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var recipe in recipes)
        {
            <tr>
                <td><a class="item" href="recipe/@recipe.ID">@recipe.Name</a></td>
                <td>tdb.</td>
                <td>tdb.</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private RecipeModel[] recipes;

    protected override async Task OnInitializedAsync()
    {
        recipes = await Http.GetFromJsonAsync<RecipeModel[]>("http://192.168.2.221:8080/recipe");
    }

}
