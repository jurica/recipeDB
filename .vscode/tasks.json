{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run frontend",
            "type": "shell",
            "command": "cd ${workspaceFolder}/frontend/recipeDB/ && dotnet watch run",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "release frontend",
            "type": "shell",
            "command": "cd ${workspaceFolder}/frontend/recipeDB/ && dotnet publish -c Release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "build",
            "type": "shell",
            "command": "go build -o bin/mac",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build arm",
            "type": "shell",
            "command": "go build -o bin/arm7",
            "options": {
                "env": {
                    "GOOS": "linux",
                    "GOARCH": "arm",
                    "GOARM": "7"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}